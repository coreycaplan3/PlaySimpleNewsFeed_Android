<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimary">

    <com.github.coreycaplan3.thebuzz.custom.CircleNetworkImageView
        android:id="@+id/profile_photo_image_view"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/standard_padding" />

    <ImageButton
        android:id="@+id/edit_profile_photo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/profile_photo_image_view"
        android:layout_marginBottom="@dimen/standard_padding_small"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/profile_photo_image_view"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_mode_edit_white_24dp"
        tools:ignore="ContentDescription" />

</RelativeLayout>